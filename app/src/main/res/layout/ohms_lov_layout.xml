<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:textAllCaps="false">

    <Button
        android:id="@+id/button_watt"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="138dp"
        android:layout_marginLeft="108dp"
        android:layout_marginStart="108dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:text="Effekt"
        android:textAllCaps="false"
        android:clickable="true"
        android:onClick="button_watt"/>

    <Button
        android:id="@+id/button_volt"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button_watt"
        android:layout_alignBottom="@+id/button_watt"
        android:layout_alignLeft="@+id/button_ampere"
        android:layout_alignStart="@+id/button_ampere"
        android:text="Spænding"
        android:textAllCaps="false"
        android:clickable="true"
        android:onClick="button_volt"/>

    <Button
        android:id="@+id/button_ampere"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/button_volt"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="38dp"
        android:layout_toEndOf="@+id/button_modstand"
        android:layout_toRightOf="@+id/button_modstand"
        android:text="Strøm"
        android:textAllCaps="false"
        android:clickable="true"
        android:onClick="button_ampere" />

    <Button
        android:id="@+id/button_modstand"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button_ampere"
        android:layout_alignBottom="@+id/button_ampere"
        android:layout_alignLeft="@+id/button_watt"
        android:layout_alignStart="@+id/button_watt"
        android:text="Modstand"
        android:textAllCaps="false"
        android:clickable="true"
        android:onClick="button_modstand" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:text="Vælg hvad du vil finde"
        android:textSize="25dp"/>

</RelativeLayout>
